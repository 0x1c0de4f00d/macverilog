SHELL = /bin/sh

VERSION = 0.0

prefix = @prefix@
exec_prefix = @exec_prefix@
srcdir = @srcdir@

VPATH = $(srcdir)

bindir = @bindir@
libdir = @libdir@
includedir = $(prefix)/include

CC = @CC@
INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@

CPPFLAGS = @CPPFLAGS@ @DEFS@ @PICFLAG@
CXXFLAGS = @CXXFLAGS@
CFLAGS  = @CFLAGS@
LDFLAGS = @LDFLAGS@

all: dep vvp.tgt

dep:
	mkdir dep

%.o: %.c
	$(CC) -Wall @ident_support@ -I$(srcdir)/.. $(CPPFLAGS) $(CFLAGS) -MD -c $< -o $*.o
	mv $*.d dep

O = vvp.o draw_mux.o draw_vpi.o eval_expr.o eval_real.o vector.o \
vvp_process.o vvp_scope.o

ifeq (@WIN32@,yes)
  TGTLDFLAGS=-L.. -livl
  TGTDEPLIBS=../libivl.a
else
  TGTLDFLAGS=
  TGTDEPLIBS=
endif


vvp.tgt: $O $(TGTDEPLIBS)
	$(CC) @shared@ -o $@ $O $(TGTLDFLAGS)

Makefile: Makefile.in config.status
	./config.status

clean:
	rm -rf *.o dep vvp.tgt

distclean: clean
	rm -f Makefile config.status config.log config.cache

check: all

install: all installdirs $(libdir)/ivl/vvp.tgt

$(libdir)/ivl/vvp.tgt: ./vvp.tgt
	$(INSTALL_PROGRAM) ./vvp.tgt $(libdir)/ivl/vvp.tgt


installdirs: ../mkinstalldirs
	$(srcdir)/../mkinstalldirs $(libdir)/ivl

uninstall:
	rm -f $(libdir)/ivl/vvp.tgt


-include $(patsubst %.o, dep/%.d, $O)
