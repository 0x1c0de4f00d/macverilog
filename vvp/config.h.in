#if SIZEOF_UNSIGNED >= 8
typedef unsigned vvp_time64_t;
#else
# if SIZEOF_UNSIGNED_LONG >= 8
typedef unsigned long vvp_time64_t;
# else
#  if SIZEOF_UNSIGNED_LONG_LONG > SIZEOF_UNSIGNED_LONG
typedef unsigned long long vvp_time64_t;
#  else
typedef unsigned long vvp_time64_t;
#  endif
